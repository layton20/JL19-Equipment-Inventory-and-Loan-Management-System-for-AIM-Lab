@model ELMS.WEB.Areas.Admin.Models.Blacklist.CreateViewModel

<div class="modal-content">
    <div class="modal-header d-flex align-content-center">
        <div><h2 class="modal-title text-left font-weight-bold">Add new Blacklist</h2></div>
        <div>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <i class="fas fa-times-circle 2x"></i>
            </button>
        </div>
    </div>
    <form id="formBlacklist" class="formBlacklist" asp-area="Admin" asp-controller="Blacklist" asp-action="Create" enctype="multipart/form-data">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="modal-body">
            <div class="form-group">
                <label asp-for="Email"></label>
                <input class="form-control" asp-for="Email" />
            </div>
            <div class="form-group">
                <div class="form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" type="checkbox" asp-for="Active">
                        Active
                        <span class="form-check-sign">
                            <span class="check"></span>
                        </span>
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label class="w-100" asp-for="Type"></label>
                <select class="selectpicker" data-width="100%" data-style="select-with-transition" asp-for="Type" asp-items="Html.GetEnumSelectList<ELMS.WEB.Enums.Admin.BlacklistTypeEnum>()">
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Reason"></label>
                <textarea class="form-control" asp-for="Reason" placeholder="Provide reason for the blacklisting"></textarea>
            </div>
        </div>
        <div class="modal-footer">
            <button type="submit" class="btn border border-primary btn-primary mr-2">Create Blacklist</button>
            <button type="submit" class="btn btn-outline-primary" data-dismiss="modal">Cancel</button>
        </div>
    </form>
</div>

<script>
    $('.selectpicker').selectpicker();
</script>