@model ELMS.WEB.Areas.Admin.Models.Blacklist.DeleteViewModel

<div class="modal-content">
    <div class="modal-header">
        <h5 class="modal-title"><strong>Delete Blacklist</strong></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <div>You are making an irreversible change to delete a blacklist.</div>
        <div>Users will no longer be warned about the blacklisted email.</div>
        <ul class="list-group rounded-0 mt-3">
            <li class="list-group-item border my-1"><strong>Blacklisted Email: </strong><span>@Model.Email</span></li>
            <li class="list-group-item border my-1"><strong>Reason: </strong><span>@Model.Reason</span></li>
            <li class="list-group-item border my-1"><strong>Blacklist Type: </strong><span>@Model.Type.ToString()</span></li>
            <li class="list-group-item border my-1"><strong>Active: </strong><span>@Model.Active</span></li>
        </ul>
    </div>
    <div class="modal-footer">
        <form id="formBlacklist" asp-area="Admin" asp-controller="Blacklist" asp-action="Delete">
            <div asp-validation-summary="All" class="text-danger asp-validation-summary-modal"></div>
            <input type="hidden" asp-for="UID" />
            <button type="submit" class="btn border border-primary btn-danger mr-2">Yes, I want to delete the blacklist</button>
            <button type="button" class="btn btn-outline-primary" data-dismiss="modal">Cancel</button>
        </form>
    </div>
</div>