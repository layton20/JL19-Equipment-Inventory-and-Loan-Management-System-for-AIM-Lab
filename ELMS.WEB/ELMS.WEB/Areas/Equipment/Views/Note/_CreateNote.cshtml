@model ELMS.WEB.Areas.Equipment.Models.Note.CreateNoteViewModel

<div class="modal-content">
    <div class="modal-header d-flex align-content-center">
        <div><h2 class="modal-title text-left font-weight-bold">Add a new note</h2></div>
        <div>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <i class="fas fa-times-circle 2x"></i>
            </button>
        </div>
    </div>
    <form id="formCreate" class="formCreate" asp-area="Equipment" asp-controller="Note" asp-action="Create" enctype="multipart/form-data" data-uid="@Model.EquipmentUID">
        <div asp-validation-summary="All" class="text-danger asp-validation-summary-modal"></div>
        <input type="hidden" asp-for="EquipmentUID" />
        <div class="modal-body">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input class="form-control" asp-for="Name" />
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea class="form-control" asp-for="Description"></textarea>
            </div>
        </div>
        <div class="modal-footer">
            <button type="submit" class="btn border border-primary btn-primary mr-2">Create Note</button>
            <button type="submit" class="btn btn-outline-primary" data-dismiss="modal">Cancel</button>
        </div>
    </form>
</div>