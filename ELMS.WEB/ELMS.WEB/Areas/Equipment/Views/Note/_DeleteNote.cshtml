@model ELMS.WEB.Areas.Equipment.Models.Note.NoteViewModel

<div class="modal-content">
    <div class="modal-header">
        <h5 class="modal-title"><strong>Delete Note</strong></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <div>You are making an irreversible change to delete a note.</div>
        <ul class="list-group rounded-0 mt-3">
            <li class="list-group-item border my-1"><strong>Name: </strong><span>@Model.Name</span></li>
            @if (!string.IsNullOrWhiteSpace(Model.Description))
            {
                <li class="list-group-item border my-1"><strong>Description: </strong><span>@Model.Description</span></li>
            }
        </ul>
    </div>
    <div class="modal-footer">
        <form id="formDeleteNote" asp-area="Equipment" asp-controller="Note" asp-action="Delete">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="UID" />
            <input type="hidden" asp-for="EquipmentUID" />
            <button type="submit" class="btn btn-danger">Yes, I want to delete the note</button>
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        </form>
    </div>
</div>