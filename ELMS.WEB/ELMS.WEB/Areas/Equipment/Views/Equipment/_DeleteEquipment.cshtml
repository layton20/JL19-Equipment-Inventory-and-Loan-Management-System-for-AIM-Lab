@model ELMS.WEB.Areas.Equipment.Models.EquipmentViewModel

<div class="modal-content">
    <div class="modal-header">
        <h5 class="modal-title"><strong>Delete Equipment</strong></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <div>You are making an irreversible change to delete an equipment.</div>
        <div>If an existing loan is attached to this equipment, it will also delete the loan.</div>
        <ul class="list-group rounded-0 mt-3">
            <li class="list-group-item border my-1"><strong>Name: </strong><span>@Model.Name</span></li>
            @if (!string.IsNullOrWhiteSpace(Model.Description))
            {
                <li class="list-group-item border my-1"><strong>Description: </strong><span>@Model.Description</span></li>
            }
            <li class="list-group-item border my-1"><strong>Status: </strong><span>@Model.Status.ToString()</span></li>
            <li class="list-group-item border my-1"><strong>Warranty Expiration Date: </strong><span>@Model.WarrantyExpirationDate</span></li>
            <li class="list-group-item border my-1"><strong>Purchase Price (&pound;): </strong><span>@Model.PurchasePrice</span></li>
            <li class="list-group-item border my-1"><strong>Purchase Date</strong><span>@Model.PurchaseDate</span></li>
        </ul>
    </div>
    <div class="modal-footer">
        <form id="formDeleteEquipment" asp-area="Equipment" asp-controller="Equipment" asp-action="Delete">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="UID" />
            <button type="submit" class="btn btn-danger">Yes, I want to delete the equipment</button>
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        </form>
    </div>
</div>