@model ELMS.WEB.Areas.General.Models.Media.DeleteEquipmentMediaViewModel

<div class="modal-content">
    <div class="modal-header">
        <h5 class="modal-title"><strong>Remove Image</strong></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <div>You are making an irreversible change to remove an image from the equipment.</div>
    </div>
    <div class="modal-footer">
        <form id="formCreate" asp-area="General" asp-controller="Media" asp-action="DeleteEquipmentMedia">
            <div asp-validation-summary="All" class="text-danger asp-validation-summary-modal"></div>
            <input type="hidden" asp-for="UID" />
            <button type="submit" class="btn border border-danger btn-danger">Yes, I want to remove the image</button>
            <button type="button" class="btn btn-outline-danger" data-dismiss="modal">Cancel</button>
        </form>
    </div>
</div>