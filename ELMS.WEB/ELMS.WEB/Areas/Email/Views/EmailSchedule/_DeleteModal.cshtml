@model ELMS.WEB.Areas.Email.Models.EmailSchedule.DeleteEmailScheduleViewModel

<div class="modal-content">
    <div class="modal-header">
        <h5 class="modal-title"><strong>Delete Email schedule</strong></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <p>You are making an irreversible change to delete an email schedule.</p>
        @if (!Model.Sent)
        {
            <p>This email has not been sent yet and will not be if you decide to delete the schedule.</p>
        }
        <ul class="list-group rounded-0 mt-3">
            <li class="list-group-item border my-1"><strong>Recipient: </strong><span>@Model.RecipientEmail</span></li>
            <li class="list-group-item border my-1"><strong>Email Type: </strong><span>@Model.EmailType</span></li>
            <li class="list-group-item border my-1"><strong>Scheduled For: </strong><span>@Model.SendTimestamp</span></li>
            <li class="list-group-item border my-1"><strong>Email Sent?: </strong><span>@Model.Sent</span></li>
        </ul>
    </div>
    <div class="modal-footer">
        <form id="formDelete" asp-area="Email" asp-controller="EmailSchedule" asp-action="Delete">
            <div asp-validation-summary="All" class="text-danger asp-validation-summary-modal"></div>
            <input type="hidden" asp-for="UID" />
            <button type="submit" class="btn border border-danger btn-danger">Yes, I want to delete the Schedule</button>
            <button type="button" class="btn btn-outline-danger" data-dismiss="modal">Cancel</button>
        </form>
    </div>
</div>