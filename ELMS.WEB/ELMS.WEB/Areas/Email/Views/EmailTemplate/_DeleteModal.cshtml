@model ELMS.WEB.Areas.Email.Models.EmailTemplate.EmailTemplateViewModel

<div class="modal-content">
    <div class="modal-header">
        <h5 class="modal-title"><strong>Delete Email Template</strong></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <div>You are making an irreversible change to delete an email template.</div>
        <div>Any existing emails accociated with this template will not be able to be executed.</div>
        <ul class="list-group rounded-0 mt-3">
            <li class="list-group-item border my-1"><strong>Name: </strong><span>@Model.Name</span></li>
            <li class="list-group-item border my-1"><strong>Subject: </strong><span>@Model.Subject</span></li>
            <li class="list-group-item border my-1"><strong>Format Type: </strong><span>@Model.TemplateType.ToString()</span></li>
            <li class="list-group-item border my-1"><strong>Body: </strong><span>@Model.Body</span></li>
        </ul>
    </div>
    <div class="modal-footer">
        <form id="formDeleteEmailTemplate" asp-area="Email" asp-controller="EmailTemplate" asp-action="Delete">
            <div asp-validation-summary="All" class="text-danger asp-validation-summary-modal"></div>
            <input type="hidden" asp-for="UID" />
            <button type="submit" class="btn border border-danger btn-danger">Yes, I want to delete the email template</button>
            <button type="button" class="btn btn-outline-danger" data-dismiss="modal">Cancel</button>
        </form>
    </div>
</div>