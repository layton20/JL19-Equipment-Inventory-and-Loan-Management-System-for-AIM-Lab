@model ELMS.WEB.Areas.Email.Models.EmailTemplate.EmailTemplateViewModel

<div class="modal-content">
    <div class="modal-header">
        <h5 class="modal-title"><strong>Email Template Details</strong></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <div>You are making an irreversible change to delete an equipment.</div>
        <div>If an existing loan is attached to this equipment, it will also delete the loan.</div>
        <ul class="list-group rounded-0 mt-3">
            <li class="list-group-item border my-1"><strong>Template Name: </strong><span>@Model.Name</span></li>
            <li class="list-group-item border my-1"><strong>Format: </strong><span>@Model.TemplateType.ToString()</span></li>
            <li class="list-group-item border my-1"><strong>Subject: </strong><span>@Model.Subject</span></li>
            <li class="list-group-item border my-1"><strong>Header: </strong><span>@Model.Header</span></li>
            <li class="list-group-item border my-1"><strong>Subheader: </strong><span>@Model.Subheader</span></li>
            <li class="list-group-item border my-1"><strong>Body: </strong><span>@Model.Body</span></li>
            <li class="list-group-item border my-1"><strong>Footer: </strong><span class="">@Model.Footer</span></li>
        </ul>
    </div>
</div>